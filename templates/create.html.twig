{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .align-center {
            margin: 0 auto;
        }
    </style>
{% endblock %}

{% block body %}
 <div class="col-lg-8 align-center">

            {% if app.request.get('_route') == "app_main_createtime" %}
                            <h1>Create new time entry.</h1>
            {% else %}
                            <h1>Edit time entry.</h1>
            {% endif %}

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {{ form_start(form) }}

            <div class="form-group">
                        <p>Start Time</p>
                {{ form_widget(form.startTime) }}
            </div>
            <div class="form-group">
                                    <p>End Time</p>

                {{ form_widget(form.endTime) }}
            </div>

            <input type="submit" class="btn btn-primary"/>

            {{ form_end(form) }}
        </div>

<br />
            <div class="row">
        <div class="col-lg-8  align-center">
            <a href="{{ path('app_main_index') }}" class="btn btn-primary">Go back to index</a>
        </div>
    </div>
{% endblock %}